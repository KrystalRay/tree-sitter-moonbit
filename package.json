{
  "name": "tree-sitter-moonbit",
  "version": "0.1.0",
  "description": "Moonbit grammar for tree-sitter",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moonbitlang/tree-sitter-moonbit.git"
  },
  "license": "Apache-2.0",
  "author": {
    "name": "Moonbit Language Team",
    "email": "support@moonbitlang.com",
    "url": "https://www.moonbitlang.com"
  },
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "incremental",
    "parsing",
    "tree-sitter",
    "moonbit"
  ],
  "files": [
    "grammar.js",
    "tree-sitter.json",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.2.1",
    "node-gyp-build": "^4.8.2"
  },
  "devDependencies": {
    "eslint": "^9.21.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-config-treesitter": "^1.0.2",
    "prebuildify": "^6.0.1",
    "tree-sitter-cli": "^0.25.4"
  },
  "peerDependencies": {
    "tree-sitter": "^0.22.4"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "install": "node-gyp-build",
    "prestart": "tree-sitter build --wasm",
    "start": "tree-sitter playground",
    "test": "node --test bindings/node/*_test.js",
    "lint": "eslint grammar.js"
  }
}
