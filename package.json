{
  "name": "tree-sitter-moonbit",
  "version": "0.1.0",
  "description": "Tree-sitter grammar for Moonbit",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/moonbitlang/tree-sitter-moonbit.git"
  },
  "license": "Apache-2.0",
  "author": "",
  "main": "bindings/node",
  "types": "bindings/node",
  "keywords": [
    "tree-sitter",
    "moonbit"
  ],
  "files": [
    "grammar.js",
    "tree-sitter.json",
    "binding.gyp",
    "prebuilds/**",
    "bindings/node/*",
    "queries/*",
    "src/**",
    "*.wasm"
  ],
  "dependencies": {
    "node-addon-api": "^8.3.1",
    "node-gyp-build": "^4.8.4"
  },
  "devDependencies": {
    "eslint": "^9.21.0",
    "eslint-config-treesitter": "^1.0.2",
    "tree-sitter-cli": "^0.24.7"
  },
  "peerDependencies": {
    "tree-sitter": "^0.22.4"
  },
  "peerDependenciesMeta": {
    "tree-sitter": {
      "optional": true
    }
  },
  "scripts": {
    "lint": "eslint grammar.js",
    "generate": "tree-sitter generate",
    "test": "tree-sitter generate && tree-sitter test",
    "promote": "tree-sitter generate && tree-sitter test -u",
    "playground": "tree-sitter generate && tree-sitter build --wasm && tree-sitter playground"
  },
  "pnpm": {
    "onlyBuiltDependencies": [
      "tree-sitter",
      "tree-sitter-cli"
    ]
  }
}
